<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stockPlus.mapper.UserKeywordMapper">

    <select id="findKeywordsByUsrId" resultType="string">
        SELECT keyword FROM user_keyword 
        WHERE USRID = #{usrId} 
        ORDER BY created_at DESC
    </select>

    <insert id="insertKeyword">
        INSERT INTO user_keyword (USRID, keyword) 
        VALUES (#{usrId}, #{keyword})
    </insert>

    <delete id="deleteKeyword">
        DELETE FROM user_keyword 
        WHERE USRID = #{usrId} AND keyword = #{keyword}
    </delete>

</mapper>
